{
    "version": "0.2.0",
    "configurations": [
        
        {
            // отладка в Google Chrome
            // чтобы отладка в VS Code заработала надо перезагрузить страницу (F5) в открывшемся окне Chrome
            "name": "Launch index.html",
            "type": "chrome",
            "request": "launch",
            "file": "${workspaceRoot}/index.html",
            "webRoot": "${workspaceRoot}"
            }  
         ,
         {
             "name": "Launch Chrome against localhost",
             "type": "chrome",
             "request": "launch",       
             "url": "http://localhost:8080",
             "webRoot": "${workspaceRoot}"
         },
         {
             "type": "chrome",
             "request": "attach",
             "name": "Attach to Chrome",
             "port": 9222,
             "webRoot": "${workspaceRoot}"
         }
    ]
}